{
  "extends": "./tsconfig.json",
  "compilerOptions": {
    "module": "ESNext",
    "target": "ES2020",
    "moduleResolution": "Node",
    "lib": ["ES2020"],
    "types": ["node"],
    "skipLibCheck": true,
    "noEmit": true
  },
  "include": [
    "src/server/**/*.ts"
  ],
  "exclude": [
    "node_modules",
    "src/screens",
    "src/ui",
    "src/components",
    "src/hooks",
    "react-native"
  ]
}
